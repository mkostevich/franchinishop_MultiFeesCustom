<template x-if="fee.input_type === 'drop_down'">
    <div class="border-2 p-4 mt-4">
        <div class="mb-4 font-semibold">
            <span x-text="fee.title"></span>
            <span class="text-red-400" x-show="fee.is_required">*</span>
        </div>
        <div class="mb-4" x-show="fee.description.lenght > 0">
            <p x-text="fee.description"></p>
        </div>
        <select class="w-full" x-model="fee.checkedOption"
                form="product_addtocart_form" :name="'fee[' + fee.id + '][options][]'"
                @change="onChangeOption()">
            <template x-for="option in fee.options" :key="option.id">
                <option :value="option.id" x-text="option.field_label"
                        :selected="option.id === fee.checkedOption"></option>
            </template>
        </select>
        <template x-if="fee.is_enabled_customer_message">
            <div class="mt-4">
                <label x-text="fee.customer_message_title"></label>
                <template x-if="fee.customer_message_title.length === 0">
                    <div>
                        <?= /* @escapeNotVerified */ __('Message for'); ?> "<span x-text="fee.title"></span>"
                    </div>
                </template>
                <textarea class="w-full" x-model="fee.customerMessage"
                          form="product_addtocart_form" :name="'fee[' + fee.id + '][message]'"
                          @change="onChangeOption()">
                </textarea>
            </div>
        </template>
        <template x-if="fee.is_enabled_date_field">
            <div class="mt-4">
                <label x-text="fee.date_field_title"></label>
                <template x-if="fee.date_field_title.length === 0">
                    <div>
                        <?= /* @escapeNotVerified */ __('Date for'); ?> "<span x-text="fee.title"></span>"
                    </div>
                </template>
                <input x-model="fee.dateField" type="date"
                       form="product_addtocart_form" :name="'fee[' + fee.id + '][date]'"
                       @change="fee.convertDate()"/>
            </div>
        </template>
        <template x-if="fee.checkedOption == -1 && fee.is_required">
            <div class="mt-4">
                <span class="text-red-500"><?= __('This fee is required.'); ?></span>
            </div>
        </template>
    </div>
</template>
